@model IEnumerable<EmployeePayrollMVC.Models.EmployeeModel>

<div class="col-md-8 offset-md-2">

    <h1 class="text-center"><i class="fas fa-comments- text-success"></i> Employee Payroll</h1>

    <br>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProfileImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    <a onclick="showInPopup('@Url.Action("AddEmployee","Employee",null,Context.Request.Scheme)','Add Employee')" class="btn btn-success text-white"><i class="fas fa-random"></i> New Employee</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        <img src="@Url.Content(item.ProfileImage)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.Emp_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Emp_Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Emp_Id">Delete</a>*@
                        <div>
                            <a onclick="showInPopup('@Url.Action("UpdateEmployee","Employee",new {id=item.EmployeeID},Context.Request.Scheme)','Update Employee')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                            <form asp-action="DeleteEmployee" asp-route-id="@item.EmployeeID" onsubmit="return jQueryAjaxDelete(this);" class="d-inline">
                                <input type="hidden" asp-for="@item.EmployeeID" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
