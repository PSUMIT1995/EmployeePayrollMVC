@model EmployeePayrollMVC.Models.EmployeeModel

@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="UpdateEmployee" asp-route-id="@Model.EmployeeID" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeID" />
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProfileImage" class="control-label"></label>
                    @Html.RadioButtonFor(model => model.ProfileImage, "~/assets/Male -1.png")
                    <img class="ProfileImage-1 " src="~/assets/Male -1.png" />
                    @Html.RadioButtonFor(model => model.ProfileImage, "~/assets/Male -2.png")
                    <img class="ProfileImage-1 " src="~/assets/Male -2.png" />
                    @Html.RadioButtonFor(model => model.ProfileImage, "~/assets/Female -1.png")
                    <img class="ProfileImage-1 " src="~/assets/Female -1.png" />
                    @Html.RadioButtonFor(model => model.ProfileImage, "~/assets/Female -2.png")
                    <img class="ProfileImage-1 " src="~/assets/Female -2.png" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                Male
                @Html.RadioButtonFor(model => model.Gender, "Male")
                Female
                @Html.RadioButtonFor(model => model.Gender, "Female")
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    @Html.DropDownList("Department", new List<SelectListItem> {
                    new SelectListItem { Text = "IT", Value = "IT", },
                    new SelectListItem { Text = "HR", Value = "HR", },
                    new SelectListItem { Text = "QA", Value = "QA", }}, "Select")
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>   
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
